/* components/inde-main-components/detail-box/detail-box.wxss */

.detailBox{
  position:fixed;
  left:10vw;
  right:10vw;
  top:20%;
  bottom:10%;
  width:75vw;
  height: 60vh;
  margin:0 auto;
  line-height: 100vh;
  background:#fff;
  z-index:9999;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.msgBox{
  height: 90%;
}
.current_img_box{
  width:100%;
  height: 53%;
  text-align: center;
}
.current_img{
  width:70%;
  height: 85%;
  margin:0 auto;
  display: block;
}
.current_text_box{
  height: 48%;
  line-height: 40rpx;  
  background: #eee;
  padding:20rpx 30rpx;  
  box-sizing: border-box;
  position: relative;   
}
.text-box{
  height:70%;
  overflow-y:auto;
}
.bottom_box{
  padding-top:30rpx;
  box-sizing:border-box;
}
.product_name{
  font-size:28rpx;
  font-weight:700;
}
.product_desc{
  margin:10rpx 0rpx;
  display: block;
  font-size:26rpx;
  color:#bbb;
  margin-bottom: 10rpx;
}
.product_price{
  font-weight: 900;
  font-size:34rpx;
  float:left;
  left:20rpx;
  bottom:10rpx;
}
.choose{
  padding:4rpx 20rpx;
  background:burlywood;
  color:white;
  border-radius:40rpx;
  font-size:28rpx;
  }
.closeBox{
  width:100%;
  height:60rpx;
  text-align: right;
  line-height: 60rpx;
}
.choose_two{
  display:inline-block;
  right:20rpx;
  bottom:10rpx;
  float:right;
}
.close{
  padding:20rpx 20rpx 0rpx 20rpx;
  font-size:36rpx;
  color:#aaa;
  font-weight: 200;  
}